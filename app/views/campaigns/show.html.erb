<div class="campaign-show-page row" data-campaignid=<%= @campaign.id %> >
  <p id="notice"><%= notice %></p>
  <% if current_user %>
    <div class="large-12 columns" id="share-plea">
      <h5>Score some karmas by sharing this page with this link:</h5>
      <h3><%= TWILIO_APP_URL + "s/" + @short_code %></h3>
    </div>
  <% end %>
  <div class="large-5 columns">
    <%= image_tag(@campaign.image.thumb.url) %>
    <div id="call-campaign-show"></div>
  </div>
  <div class="large-7 columns">
    <h2><%= @title %></h2>
    <h5>By <%= @campaign.organizer.email %></h5>
    <div class="description">
      <%= simple_format(@campaign.description) %>
    </div>
  </div>
</div>

